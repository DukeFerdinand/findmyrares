<section>
    <h2 class="text-4xl font-bold text-center">Welcome to Find My Rares!</h2>
    <p class="text-xl text-center mt-6">The first tool built for DJs and collectors to find rare records, music, games, and collectibles.</p>
    <div class="flex justify-around w-full md:w-3/4 mx-auto pt-12">
      <% if Current.user.nil? %>
        <%=  link_to "Sign Up", signup_path, class: "bg-blue-600 text-center py-2 px-6 text-2xl font-bold rounded-xl w-full md:w-2/5"  %>
        <%=  link_to "Sign In", signup_path, class: "bg-green-600 text-center py-2 px-6 text-2xl font-bold rounded-xl w-full md:w-2/5"  %>
      <%  else  %>
        <div class="bg-gray-800 p-10 rounded-xl">
          <p>Welcome back, <%= Current.user[:username] %>! Your rares missed you :(</p>
          <div class="flex">
            <%= link_to "Go to Dashboard", dashboard_path, class: "bg-green-700 text-gray-900 py-2 px-6 rounded-xl mx-auto mt-5" %>
          </div>
        </div>

      <% end %>

    </div>
</section>
